# Rules

rule proofing
  command = _diffbrowsers proof $fonts -s $styles -o $out -pt $pt_size -ch $
      "$characters" --filter-styles "$filters"

# Build rules
build out/Proof/Regular: proofing
  fonts = $
      "/Users/marichalemma/Google/forks/soft-type-jersey/fonts/ttf/normal/Jersey10-Regular.ttf"
  styles = instances
  out = out/diffbrowsers
  pt_size = 20
  characters = .*
  filters = Regular
